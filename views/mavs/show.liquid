{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>{{mav.name}}
      </h2>
      <h4>
        {% if mav.readyToPlay %}
          Put in starting five
        {% else %}
          Bench them
        {% endif %}
      </h4>
      <h4>The position of this player is:
        {{mav.position}}
      </h4>
      {% if mav.owner == userId %}
        <div class="btn-group">
          {%- comment -%}
            first button will send us to the edit page
          {%- endcomment -%}
          <a class="btn btn-primary" href="/mavs/edit/{{mav.id}}">Edit</a>
          {%- comment -%}
            the second button(which will actually be a form, will send a DELETE request)
          {%- endcomment -%}
          <form action="/mavs/{{mav.id}}?_method=DELETE" method="POST">
            <input class="btn btn-danger" type="submit" value="Delete">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}}}